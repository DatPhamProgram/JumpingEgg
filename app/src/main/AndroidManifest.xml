<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JumpingEgg">
        <activity
            android:name=".view.DoaGameActivity"
            android:exported="false"
            android:label="@string/title_activity_doa_game"
            android:theme="@style/Theme.MyApplication" />
        <activity
            android:name=".view.GameActivity"
            android:exported="false"
            android:label="@string/title_activity_game"
            android:theme="@style/Theme.MyApplication" />
        <activity
            android:exported="false"
            android:label="@string/title_activity_instruction"
            android:theme="@style/Theme.MyApplication" />
        <activity
            android:name=".view.RankingActivity"
            android:exported="false"
            android:label="@string/title_activity_ranking"
            android:theme="@style/Theme.MyApplication" />
        <activity
            android:name=".view.main.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MyApplication">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>